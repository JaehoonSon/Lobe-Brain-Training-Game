{
  "expo": {
    "name": "Lobe",
    "slug": "lobe",
    "version": "1.0.2",
    "orientation": "portrait",
    "icon": "./assets/images/brain_logo.png",
    "scheme": "lobe",
    "userInterfaceStyle": "light",
    "newArchEnabled": true,
    "splash": {
      "image": "./assets/images/brain_logo.png",
      "resizeMode": "contain",
      "backgroundColor": "#fe7939"
    },
    "assetBundlePatterns": ["**/*"],
    "locales": {
      "ja": "./languages/japanese.json",
      "es": "./languages/spanish.json",
      "zh-Hans": "./languages/chinese-simplified.json"
    },
    "ios": {
      "appStoreUrl": "https://apps.apple.com/us/app/lobe-brain-training-games/id6757370720",
      "usesAppleSignIn": true,
      "supportsTablet": false,
      "buildNumber": "1",
      "bundleIdentifier": "com.theblucks.brainapp",
      "infoPlist": {
        "CFBundleAllowMixedLocalizations": true,
        "NSCameraUsageDescription": "We use the camera to take your profile photo.",
        "NSPhotoLibraryUsageDescription": "We access your photo library to choose a profile photo.",
        "NSPhotoLibraryAddUsageDescription": "We save your profile photo to your photo library.",
        "ITSAppUsesNonExemptEncryption": false,
        "NSAppTransportSecurity": {
          "NSAllowsArbitraryLoads": true
        },
        "CFBundleURLTypes": [
          {
            "CFBundleURLSchemes": [
              "com.googleusercontent.apps.119239050721-dhiahbraqtnql8v44qkvfcmqiud8fac6"
            ]
          }
        ]
      }
    },
    "android": {
      "adaptiveIcon": {
        "foregroundImage": "./assets/images/brain_logo_transparent.png",
        "backgroundColor": "#fa8b4b"
      },
      "package": "com.knuceles.ExpoTemplate"
    },
    "web": {
      "bundler": "metro",
      "output": "static",
      "favicon": "./assets/images/favicon.png"
    },
    "plugins": [
      "expo-router",
      "expo-apple-authentication",
      "expo-video",
      [
        "expo-localization",
        {
          "supportedLocales": {
            "ios": ["en", "ja", "es", "zh-Hans"],
            "android": ["en", "ja", "es", "zh-Hans"]
          }
        }
      ],
      "expo-notifications",
      [
        "expo-build-properties",
        {
          "android": {
            "minSdkVersion": 21
          },
          "ios": {
            "deploymentTarget": "15.1"
          }
        }
      ],
      "expo-web-browser",
      "@react-native-google-signin/google-signin"
    ],
    "experiments": {
      "typedRoutes": true
    },
    "owner": "knuceles",
    "extra": {
      "router": {},
      "eas": {
        "projectId": "586a70a9-4ec7-4ec2-a30a-220fd0ebf9d4"
      }
    }
  }
}
